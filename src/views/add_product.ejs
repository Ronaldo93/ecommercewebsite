<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Product</title>
    <!-- Favicon -->
    <link rel="icon" href="image/logo.JPG" type="image/png" />

    <!--font-awesome link-->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />

    <!--css link-->
    <link rel="stylesheet" href="/css/global.css " />
    <link rel="stylesheet" href="/css/add_product.css" />
  </head>
  <body>
    <!--Header section -->
    <header>
      <a href="#" class="logo"
        ><img
          src="image/logo.JPG"
          alt="store logo image"
          class="logoimg"
        />ShoeTronics</a
      >
      <nav class="navbar">
        <a href="#" class="active">Add product</a>
        <a class="" href="/vendor/viewproduct">View Product</a>
      </nav>
      <div class="icons">
        <i class="fas fa-bars" id="menu-bars"></i>
        <!-- show login button only if authenticated = false -->
        <% if (!authenticated) { %>
        <i class="fas fa-user" id="login-btn"></i>
        <% } else { %>
        <a href="/user/profile">
          <i class="fas fa-user"></i>
        </a>
        <a href="/user/logout" class="fas fa-sign-out-alt"></a>
        <% } %>
      </div>

      <!--User login form-->
      <div class="login-form-container">
        <div id="close-login-btn" class="fas fa-times"></div>
        <form action="/login" method="post">
          <h3>sign in</h3>
          <span>username</span>
          <input
            type="text"
            name="username"
            class="box"
            placeholder="Enter Username"
            id="username"
          />
          <span>password</span>
          <input
            type="password"
            name="password"
            class="box"
            placeholder="Enter Password"
            id="password"
          />
          <!--            <div class="checkbox">-->
          <!--                <input type="checkbox" name="" id="remember-me">-->
          <!--                <label for="remember-me">remember me</label>-->
          <!--            </div>-->
          <input type="submit" value="sign in" class="btn" />
          <!--            <p>forget password?<a href="#">click here</a></p>-->
          <p>do not have account?<a href="/signup"> Create one</a></p>
        </form>
      </div>
    </header>

    <main>
      <form action="/vendor/addproduct" method="POST">
        <h1>Add Product</h1>

        <!-- hidden input for userid -->
        <input type="hidden" name="vendor" value="<%= userid %>" />

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" required />

        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required />

        <label for="thumbnail">Thumbnail:</label>
        <input type="text" id="thumbnail" name="thumbnail" required />

        <label for="description">Description:</label>
        <textarea
          id="description"
          name="description"
          rows="4"
          required
        ></textarea>

        <!-- <label for="vendor">Vendor:</label>
      <input type="text" id="vendor" name="vendor" required> -->

        <button type="submit">Submit</button>
      </form>
    </main>
    <!--Fotter-->
    <section class="fotter">
      <nav class="navbar" id="navbar">
        <a href="#">About Us</a>
        <a href="#">Privacy Policy</a>
        <a href="#">Terms</a>
        <a href="#">Copyright</a>
        <a href="#">Contact Us </a>
      </nav>
    </section>

    <!--js link-->
    <script src="/js/script.js"></script>
  </body>
</html>
