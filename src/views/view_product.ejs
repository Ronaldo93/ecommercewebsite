<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Product</title>
    <!-- Favicon -->
    <link rel="icon" href="image/logo.JPG" type="image/png" />

    <!--font-awesome link-->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />

    <!--css link-->
    <link rel="stylesheet" href="/css/global.css " />
    <link rel="stylesheet" href="/css/view_product.css" />
    <!-- <script src="/js/view_product.js"></script> -->
  </head>
  <body>
    <!--Header section -->
    <header>
      <a href="#" class="logo">
        <img src="image/logo.JPG" alt="store logo image" class="logoimg" />
        ShoeTronics
      </a>
      <nav class="navbar">
        <a href="/vendor/addproduct">Add product</a>
        <a class="active" href="#">View product</a>
      </nav>
      <div class="icons">
        <i class="fas fa-bars" id="menu-bars"></i>
        <i class="fas fa-user" id="login-btn"></i>
      </div>

      <!-- User login form -->
      <div class="login-form-container">
        <div id="close-login-btn" class="fas fa-times"></div>
        <form action="">
          <h3>Sign In</h3>
          <span>Username</span>
          <input
            type="email"
            name=""
            class="box"
            placeholder="Enter email"
            id=""
          />
          <span>Password</span>
          <input
            type="password"
            name=""
            class="box"
            placeholder="Enter password"
            id=""
          />
          <div class="checkbox">
            <input type="checkbox" name="" id="remember-me" />
            <label for="remember-me">Remember me</label>
          </div>
          <input type="submit" value="Sign In" class="btn" />
          <p>Forgot password?<a href="#">Click here</a></p>
          <p>Don't have an account?<a href="#">Create one</a></p>
        </form>
      </div>
    </header>

    <main>
      <h1>Products</h1>

      <table>
        <tr>
          <th>Thumbnail</th>
          <th>Price($)</th>
          <th>Title</th>
          <th>Description</th>
          <th>Vendor</th>
        </tr>
        <% products.forEach(function(product) { %>
        <tr>
          <td><img src="<%= product.thumbnail %>" alt="productss" /></td>
          <td><%= product.price %></td>
          <td><%= product.title %></td>
          <td><%= product.description %></td>
          <td><%= product.vendor.username %></td>
        </tr>
        <% }); %>
      </table>
    </main>
    <!--Fotter-->
    <section class="fotter">
      <nav class="navbar" id="navbar">
        <a href="#">About Us</a>
        <a href="#">Privacy Policy</a>
        <a href="#">Terms</a>
        <a href="#">Copyright</a>
        <a href="#">Contact Us </a>
      </nav>
    </section>

    <!--js link-->
    <script src="/js/script.js"></script>
    <!-- <script src="/js/view_product.js"></script> -->
  </body>
</html>
