<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/detail.css">
    <link rel="stylesheet" href="/css/global.css">
    <script src="/js/detail.js"></script>
</head>
<body>
    <div id="contain">
       <div id="img"> <img src="<%= product.thumbnail %>" alt=""></div>
       <div id="information">
        <form id="productForm" method="POST" action="/carts">
            <div>
              <input type="hidden" name="productThumbnail" value="<%= product.thumbnail %>">
            </div>
            <div>
              <h1>Title: <%= product.title %></h1>
              <input type="hidden" name="productTitle" value="<%= product.title %>">
            </div>
            <div>
              <input type="hidden" name="productId" value="<%= product._id %>">
            </div>
            <div>
              <h2>Description</h2>
            </div>
            <div id="description">
              <%= product.description %>
            </div>
            <div>
              <h2 id="price">Price: $<span id="displayPrice"><%= product.price %></span></h2>
              <input type="hidden" name="productPrice" value="<%= product.price %>">
            </div>
            <h2>Buy Now</h2>
            <div>
              <label for="userName">User Name:</label>
              <input type="text" id="userName" name="userName" required>
            </div>
            <div>
              <label for="productDistributionHub">Distribution Hub:</label>
              <select id="productDistributionHub" name="productDistributionHub" required>
                <option value="">Select a hub</option>
                <option value="Hub A">Hub A</option>
                <option value="Hub B">Hub B</option>
                <option value="Hub C">Hub C</option>
              </select>
            </div>
            <!-- <div>
              <label for="quantity">Quantity:</label>
              <input type="number" id="quantity" name="quantity" value="1" min="1" required>
            </div> -->
            <div>
              <label for="address">Address:</label>
              <input type="text" id="address" name="address" required>
            </div>
            <div id="button">
              <button type="submit">Submit</button>
            </div>
          </form>
    </div>
</body>
</html>