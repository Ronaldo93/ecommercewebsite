<body>
 <!--Header section -->
 <header>
  <a href="#" class="logo"
    ><img
      src="image/logo.JPG"
      alt="store logo image"
      class="logoimg"
    />ShoeTronics</a
  >
  <nav class="navbar">
    <a href="/" class="active">Home</a>
    <a class="" href="/product">Shop</a>
  </nav>
  <div class="icons">
    <i class="fas fa-bars" id="menu-bars"></i>
    <!-- show login button only if authenticated = false -->
    <% if (!authenticated) { %>
    <i class="fas fa-user" id="login-btn"></i>
    <% } else { %>
    <a href="/user/profile">
      <i class="fas fa-user"></i>
    </a>
    <a href="/user/logout" class="fas fa-sign-out-alt"></a>
    <% } %>
  </div>

  <!--User login form-->
  <div class="login-form-container">
    <div id="close-login-btn" class="fas fa-times"></div>
    <form action="/login" method="post">
      <h3>sign in</h3>
      <span>username</span>
      <input
        type="text"
        name="username"
        class="box"
        placeholder="Enter Username"
        id="username"
      />
      <span>password</span>
      <input
        type="password"
        name="password"
        class="box"
        placeholder="Enter Password"
        id="password"
      />
      <!--            <div class="checkbox">-->
      <!--                <input type="checkbox" name="" id="remember-me">-->
      <!--                <label for="remember-me">remember me</label>-->
      <!--            </div>-->
      <input type="submit" value="sign in" class="btn" />
      <!--            <p>forget password?<a href="#">click here</a></p>-->
      <p>do not have account?<a href="/signup"> Create one</a></p>
    </form>
  </div>
</header>

<body>
    <main>
      <div id="contain">
        <div id="img"> <img src="<%= product.thumbnail %>" alt=""></div>
        <div id="information">
         <form id="productForm" method="POST" action="/cart/add">
             <div>
               <input type="hidden" name="productThumbnail" value="<%= product.thumbnail %>">
             </div>
             <div>
               <h1>Title: <%= product.title %></h1>
               <input type="hidden" name="productTitle" value="<%= product.title %>">
             </div>
             <div>
               <input type="hidden" name="productId" value="<%= product._id %>">
             </div>
             <div>
               <h2>Description</h2>
             </div>
             <div id="description">
               <%= product.description %>
             </div>
             <div>
               <h2 id="price">Price: $<span id="displayPrice"><%= product.price %></span></h2>
               <input type="hidden" name="productPrice" value="<%= product.price %>">
             </div>
             <% if (username) { %>
            <h2>Add to cart</h2>
             <div>
               <label for="userName">User Name:</label>
               <input type="text" id="userName" name="userName" value="<%= username %>" required readonly>
             </div>
             <div>
               <label for="distributionHubname">Distribution Hub:</label>
               <select id="distributionHubname" name="distributionHubname" required>
                 <option value="">Select a hub</option>
                 <option value="Hub A">Hub A</option>
                 <option value="Hub B">Hub B</option>
                 <option value="Hub C">Hub C</option>
               </select>
             </div>
            <!-- <div>
               <label for="quantity">Quantity:</label>
               <input type="number" id="quantity" name="quantity" value="1" min="1" required>
             </div> -->
             <div>
              <label for="address">Address:</label>
              <input type="text" id="address" name="address" required>
            </div>
            <div id="button">
              <button type="submit">Submit</button>
            </div>
          </form>
    </div>
             <% } else { %><% } %>
    </main>
  <!--Fotter-->
 <section class="fotter">
  <nav class="navbar" id="navbar"> 
      <a href="#">About Us</a>
      <a href="#">Privacy Policy</a>
      <a href="#">Terms</a>
      <a href="#">Copyright</a>
      <a href="#">Contact Us </a>
  </nav>
</section>

<!--js link-->
<script src="/js/script.js"></script>
</body>
