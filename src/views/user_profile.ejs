<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Profile</title>
    <!-- bootstrap link -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.1/css/bootstrap.min.css"
    />
    <!-- font-awesome link -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <!-- css link -->
    <link rel="stylesheet" href="/css/user_profile.css" />
    <!-- Js for adding a form -->
    <script src="/js/user_profile.js" defer></script>
  </head>
  <!-- bootstrap template link:
https://mdbootstrap.com/docs/standard/extended/profiles/ -->
  <body>
    <!-- upload form snippet provided by uiverse.com (https://uiverse.io/Yaya12085/nasty-wolverine-41) -->
    <div class="imageUpload">
      <form
        class="form"
        action="/user/profile/updateImage"
        method="post"
        enctype="multipart/form-data"
      >
        <span class="form-title">Upload your file</span>
        <p class="form-paragraph">File should be an image</p>
        <label for="file-input" class="drop-container">
          <span class="drop-title">Drop files here</span>
          or
          <input
            type="file"
            accept="image/*"
            required=""
            id="file-input"
            name="image"
          />
        </label>
        <button type="submit" class="btn btn-primary">Upload</button>
      </form>
    </div>

    <section class="vh-100" id="body">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col col-lg-6 mb-4 mb-lg-0">
            <div class="card mb-3" id="card">
              <div class="row g-0">
                <div
                  class="col-md-4 gradient-custom text-center text-white"
                  id="profile-card"
                >
                  <!-- <img
                    src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp"
                    alt="Avatar"
                    class="img-fluid my-5"
                    style="width: 80px"
                  /> -->
                  <% if (profile_image) { %>
                  <img
                    src="data:image/png;base64,<%- profile_image %>"
                    id="profile-picture"
                    alt="Avatar"
                    class="img-fluid my-5"
                  />
                  <% } else if (profile_image = "not found"){ %>
                  <div class="d-block mx-auto my-5" id="no-image">
                    <p>No image found</p>
                  </div>
                  <% } %>
                  <!-- TODO: Name based on role -->
                  <h5><%= user.username %></h5>
                  <p><%= user.role %></p>
                  <i class="far fa-edit mb-5" id="edit-profile"></i>
                </div>
                <div class="col-md-8">
                  <div class="card-body p-4">
                    <h6>Information</h6>
                    <hr class="mt-0 mb-4" />
                    <div class="row pt-1">
                      <div class="col-6 mb-3">
                        <!-- Address based on role -->
                        <% if (user.role === "vendor") { %>
                        <h6>Business Address</h6>
                        <p class="text-muted"><%= user.businessaddress %></p>
                        <% } else if (user.role === "customer") { %>
                        <h6>Customer Address</h6>
                        <p class="text-muted"><%= user.address %></p>
                        <% } %>
                      </div>
                      <div class="col-6 mb-3">
                        <% if (user.role === "vendor") { %>
                        <h6>Business Name</h6>
                        <p class="text-muted"><%= user.businessname %></p>
                        <% } else { %> <% } %>
                      </div>
                    </div>
                    <!-- if role = shipper -->
                    <% if (user.role === "shipper") { %>
                    <h6>Shipper information</h6>
                    <hr class="mt-0 mb-4" />
                    <div class="row pt-1">
                      <div class="col-6 mb-3">
                        <h6>Distribution Hub:</h6>
                        <p class="text-muted">
                          <%= user.distributionHub.name %>
                        </p>
                      </div>
                      <div class="col-6 mb-3">
                        <h6>Distribution Hub Location:</h6>
                        <p class="text-muted">
                          <%= user.distributionHub.address %>
                        </p>
                      </div>
                    </div>
                    <% } %>
                    <div class="d-flex justify-content-start">
                      <a href="#!"
                        ><i class="fab fa-facebook-f fa-lg me-3"></i
                      ></a>
                      <a href="#!"><i class="fab fa-twitter fa-lg me-3"></i></a>
                      <a href="#!"><i class="fab fa-instagram fa-lg"></i></a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
